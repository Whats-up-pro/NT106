<Window x:Class="ThreeMess.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ThreeMess.ViewModels"
        mc:Ignorable="d"
    Title="Đăng nhập" Height="520" Width="420" WindowStartupLocation="CenterScreen"
    Background="#FFF5F6F8" Opacity="0">

    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>

    <Grid Margin="18">
        <Border Background="White" CornerRadius="18" Padding="26" BorderBrush="#FFE5E7EB" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Button Click="Back_Click" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0" Padding="0" Margin="0,0,0,8">
                    <TextBlock Text="←" FontSize="18" Foreground="#FF111827" />
                </Button>

                <TextBlock Grid.Row="0" Text="Login" FontSize="28" FontWeight="SemiBold" Foreground="#FF111827" HorizontalAlignment="Center" />
                <TextBlock Grid.Row="1" Text="3Mess" Foreground="#FF6B7280" FontSize="12" HorizontalAlignment="Center" Margin="0,6,0,18" />

                <TextBox Grid.Row="2" Style="{StaticResource WatermarkTextBox}" Tag="Email"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

                <PasswordBox x:Name="PasswordBox" Grid.Row="3" Style="{StaticResource WatermarkPasswordBox}" Tag="Password" Margin="0,12,0,0" />

                <DockPanel Grid.Row="4" Margin="0,12,0,0">
                    <CheckBox IsChecked="{Binding RememberMe}" VerticalAlignment="Center" Foreground="#FF374151">
                        <TextBlock Text="remember" FontSize="12" />
                    </CheckBox>
                    <Button DockPanel.Dock="Right" Click="ForgotPassword_Click" Background="Transparent" BorderThickness="0" Padding="0">
                        <TextBlock Text="Forgot password ?" Foreground="#FF2563EB" FontSize="12" />
                    </Button>
                </DockPanel>

                <Button Grid.Row="5" Command="{Binding LoginCommand}" Height="42" Margin="0,14,0,0"
                        Background="#FF38BDF8" Foreground="White" BorderThickness="0">
                    <TextBlock Text="Login" FontWeight="SemiBold" FontSize="14" />
                </Button>

                <TextBlock Grid.Row="6" Text="{Binding Status}" Foreground="#FFDC2626" Margin="0,10,0,0" TextWrapping="Wrap" />

                <StackPanel Grid.Row="7" Margin="0,12,0,0" HorizontalAlignment="Center" Orientation="Horizontal">
                    <TextBlock Text="Chưa có tài khoản? " Foreground="#FF6B7280" FontSize="12" />
                    <Button Click="OpenSignup_Click" Background="Transparent" BorderThickness="0" Padding="0">
                        <TextBlock Text="Đăng ký" Foreground="#FF2563EB" FontSize="12" />
                    </Button>
                </StackPanel>

                <TextBlock Grid.Row="8" />
            </Grid>
        </Border>
    </Grid>
</Window>


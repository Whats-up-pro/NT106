<Window x:Class="ThreeMess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreeMess"
        xmlns:vm="clr-namespace:ThreeMess.ViewModels"
        mc:Ignorable="d"
        Title="MessagingApp" Height="720" Width="1180" MinHeight="640" MinWidth="1050"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <LinearGradientBrush x:Key="ChatBackground" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#FFF1F5F9" Offset="0" />
            <GradientStop Color="#FFEEF2FF" Offset="1" />
        </LinearGradientBrush>

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Background" Value="#FFF3F4F6" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
        </Style>

        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="44" />
            <Setter Property="Height" Value="44" />
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#FFE5E7EB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimarySendButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2563EB" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="999"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <DataTemplate DataType="{x:Type vm:FriendItemViewModel}">
            <Grid Margin="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Width="40" Height="40" CornerRadius="20" Background="#FFE5E7EB" VerticalAlignment="Center">
                    <TextBlock Text="{Binding AvatarText}" FontWeight="SemiBold" Foreground="#FF111827"
                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>

                <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#FF111827" TextTrimming="CharacterEllipsis" />
                    <TextBlock Text="{Binding Status}" Foreground="#FF6B7280" FontSize="12" TextTrimming="CharacterEllipsis" />
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:MemberItemViewModel}">
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="28" />
                </Grid.ColumnDefinitions>
                <Border Width="32" Height="32" CornerRadius="16" Background="#FFE5E7EB" VerticalAlignment="Center">
                    <TextBlock Text="{Binding AvatarText}" FontWeight="SemiBold" Foreground="#FF111827"
                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#FF111827" />
                <Button Grid.Column="2" Style="{StaticResource IconButton}" Width="28" Height="28" Margin="0" Background="#FFF9FAFB">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE712;" FontSize="12" Foreground="#FF6B7280" />
                </Button>
            </Grid>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:MessageItemViewModel}">
            <Grid Margin="8,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Border x:Name="LeftAvatar" Width="28" Height="28" CornerRadius="14" Background="#FFE5E7EB" VerticalAlignment="Bottom" Margin="0,0,8,0">
                    <TextBlock Text="{Binding SenderAvatarText}" FontWeight="SemiBold" Foreground="#FF111827"
                               HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" />
                </Border>

                <Border x:Name="Bubble" Grid.Column="1" Background="White" BorderBrush="#FFE5E7EB" BorderThickness="1"
                        CornerRadius="16" Padding="14,10" MaxWidth="640">
                    <StackPanel>
                        <TextBlock x:Name="MessageText" Text="{Binding Text}" TextWrapping="Wrap" Foreground="#FF111827" FontSize="15" />

                        <TextBlock x:Name="LinkBlock" Visibility="Collapsed" TextWrapping="Wrap" FontSize="15">
                            <Hyperlink NavigateUri="{Binding LinkUri}" RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="{Binding LinkText}" />
                            </Hyperlink>
                        </TextBlock>

                        <Border x:Name="ImageBlock" Visibility="Collapsed" CornerRadius="12" ClipToBounds="True" Margin="0,2,0,0">
                            <Image Source="{Binding Image}" Stretch="Uniform" MaxHeight="260" />
                        </Border>

                        <StackPanel x:Name="FileBlock" Visibility="Collapsed" Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="{Binding FileName}" TextWrapping="Wrap" FontSize="15" />
                            <Button Content="Lưu" Margin="10,0,0,0" Padding="10,2" Click="SaveFileButton_Click" />
                        </StackPanel>

                        <TextBlock x:Name="TimeText" Text="{Binding TimeText}" Foreground="#FF6B7280" FontSize="11" HorizontalAlignment="Right" Margin="0,4,0,0" />
                    </StackPanel>
                </Border>

                <Border x:Name="RightAvatar" Grid.Column="2" Width="28" Height="28" CornerRadius="14" Background="#FFE5E7EB" VerticalAlignment="Bottom" Margin="8,0,0,0" Visibility="Collapsed">
                    <TextBlock Text="{Binding SenderAvatarText}" FontWeight="SemiBold" Foreground="#FF111827"
                               HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" />
                </Border>
            </Grid>

            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsOutgoing}" Value="True">
                    <Setter TargetName="LeftAvatar" Property="Visibility" Value="Collapsed" />
                    <Setter TargetName="RightAvatar" Property="Visibility" Value="Visible" />
                    <Setter TargetName="Bubble" Property="HorizontalAlignment" Value="Right" />
                    <Setter TargetName="Bubble" Property="Background" Value="#FF7C3AED" />
                    <Setter TargetName="Bubble" Property="BorderBrush" Value="#FF6D28D9" />
                    <Setter TargetName="MessageText" Property="Foreground" Value="White" />
                    <Setter TargetName="LinkBlock" Property="Foreground" Value="White" />
                    <Setter TargetName="TimeText" Property="Foreground" Value="#FFE9D5FF" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsOutgoing}" Value="False">
                    <Setter TargetName="Bubble" Property="HorizontalAlignment" Value="Left" />
                    <Setter TargetName="Bubble" Property="Background" Value="#FF7C3AED" />
                    <Setter TargetName="Bubble" Property="BorderBrush" Value="#FF6D28D9" />
                    <Setter TargetName="MessageText" Property="Foreground" Value="White" />
                    <Setter TargetName="LinkBlock" Property="Foreground" Value="White" />
                    <Setter TargetName="TimeText" Property="Foreground" Value="#FFE9D5FF" />
                </DataTrigger>

                <DataTrigger Binding="{Binding Kind}" Value="Link">
                    <Setter TargetName="MessageText" Property="Visibility" Value="Collapsed" />
                    <Setter TargetName="ImageBlock" Property="Visibility" Value="Collapsed" />
                    <Setter TargetName="LinkBlock" Property="Visibility" Value="Visible" />
                </DataTrigger>

                <DataTrigger Binding="{Binding Kind}" Value="Image">
                    <Setter TargetName="MessageText" Property="Visibility" Value="Collapsed" />
                    <Setter TargetName="LinkBlock" Property="Visibility" Value="Collapsed" />
                    <Setter TargetName="FileBlock" Property="Visibility" Value="Collapsed" />
                    <Setter TargetName="ImageBlock" Property="Visibility" Value="Visible" />
                </DataTrigger>

                <DataTrigger Binding="{Binding Kind}" Value="File">
                    <Setter TargetName="MessageText" Property="Visibility" Value="Collapsed" />
                    <Setter TargetName="LinkBlock" Property="Visibility" Value="Collapsed" />
                    <Setter TargetName="ImageBlock" Property="Visibility" Value="Collapsed" />
                    <Setter TargetName="FileBlock" Property="Visibility" Value="Visible" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="#FFF5F6F8">
        <Grid Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="270" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="330" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Left: friends -->
            <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Bạn bè" FontWeight="SemiBold" Foreground="#FF111827" Margin="2,0,0,10" />

                    <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="10" BorderBrush="#FFE5E7EB" BorderThickness="1">
                        <DockPanel LastChildFill="True">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE721;" Foreground="#FF6B7280" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" />
                            <TextBox Style="{StaticResource WatermarkTextBox}" Tag="Tìm kiếm"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     BorderThickness="0" Background="Transparent" Foreground="#FF111827"
                                     FontSize="13" VerticalContentAlignment="Center" Padding="0" />
                        </DockPanel>
                    </Border>

                    <ListBox Grid.Row="2" Margin="0,12,0,0"
                             ItemsSource="{Binding Friends}" SelectedItem="{Binding SelectedFriend}"
                             BorderThickness="0" Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Hidden">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0,0,0,6" />
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="ItemBorder" CornerRadius="12" Background="#FFF9FAFB" BorderBrush="#FFE5E7EB" BorderThickness="1">
                                                <ContentPresenter />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="Background" Value="#FFE0EAFF" />
                                                    <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#FFBBD2FF" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Middle: chat -->
            <Border Grid.Column="1" CornerRadius="16" Background="{StaticResource ChatBackground}" Padding="10" Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="64" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding SelectedConversation.Title, FallbackValue=Tin nhắn}" FontWeight="SemiBold" FontSize="16" Foreground="#FF111827"
                                   VerticalAlignment="Center" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis" />
                    </Grid>

                    <!-- Messages -->
                    <Border Grid.Row="1" Background="Transparent" Padding="6,8">
                        <Grid>
                            <ListBox x:Name="MessagesList" ItemsSource="{Binding Messages}" BorderThickness="0" Background="Transparent" SelectionMode="Single"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                    ScrollViewer.VerticalScrollBarVisibility="Hidden">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Margin" Value="0" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Focusable" Value="False" />
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>

                            <StackPanel x:Name="EmptyState" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Chọn cuộc trò chuyện" Foreground="#FF111827" FontWeight="SemiBold" FontSize="16" HorizontalAlignment="Center" />
                                <TextBlock Text="để bắt đầu nhắn tin" Foreground="#FF6B7280" FontSize="12" HorizontalAlignment="Center" Margin="0,4,0,0" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Input -->
                    <Border Grid.Row="2" Background="#FFE5E7EB" CornerRadius="14" Padding="8" Margin="0,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Button x:Name="AttachButton" Style="{StaticResource IconButton}" Width="38" Height="38" Margin="0" Background="#FFF9FAFB" Click="AttachButton_Click">
                                <Button.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Gửi ảnh..." Click="SendImageMenuItem_Click" />
                                        <MenuItem Header="Gửi file..." Click="SendFileMenuItem_Click" />
                                    </ContextMenu>
                                </Button.ContextMenu>
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8B7;" FontSize="16" Foreground="#FF6B7280" />
                            </Button>

                            <TextBox x:Name="DraftBox" Style="{StaticResource WatermarkTextBox}" Tag="Nhập tin nhắn..."
                                     Text="{Binding DraftMessage, UpdateSourceTrigger=PropertyChanged}"
                                     BorderThickness="0" Background="Transparent" FontSize="14" Foreground="#FF111827"
                                     VerticalContentAlignment="Center" Padding="2,1" Grid.Column="1" Margin="10,0,0,0" />

                            <Button Grid.Column="2" Style="{StaticResource PrimarySendButton}" Command="{Binding SendMessageCommand}" Margin="10,0,0,0" Width="40" Height="40" Padding="0">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE724;" FontSize="18" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" />
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Right: actions + members + docs -->
            <Border Grid.Column="2" Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Actions -->
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button Style="{StaticResource IconButton}" Margin="0,0,10,10">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE80F;" FontSize="18" Foreground="#FF111827" />
                            </Button>
                            <Button Style="{StaticResource IconButton}" Margin="0,0,10,10">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE7ED;" FontSize="18" Foreground="#FF111827" />
                            </Button>
                            <Button Style="{StaticResource IconButton}" Margin="0,0,10,10">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="18" Foreground="#FF111827" />
                            </Button>
                        </StackPanel>
                        <Border DockPanel.Dock="Right" Width="44" Height="44" CornerRadius="22" Background="#FFE5E7EB" Margin="0,0,0,10">
                            <TextBlock Text="U" FontWeight="SemiBold" Foreground="#FF111827" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </DockPanel>

                    <TextBlock Grid.Row="1" Text="Thành viên" FontWeight="SemiBold" Foreground="#FF111827" Margin="0,4,0,10" />
                    <ListBox Grid.Row="2" ItemsSource="{Binding Members}" BorderThickness="0" Background="Transparent" />

                    <StackPanel Grid.Row="3" Margin="0,10,0,0">
                        <TextBlock Text="Tài liệu" FontWeight="SemiBold" Foreground="#FF111827" Margin="0,0,0,8" />
                        <Expander Header="Hình ảnh &amp; Video" IsExpanded="True" Background="White" BorderBrush="#FFE5E7EB" BorderThickness="1" Padding="8">
                            <TextBlock Foreground="#FF6B7280" FontSize="12" Text="(demo)" />
                        </Expander>
                        <Expander Header="Tài liệu" IsExpanded="False" Background="White" BorderBrush="#FFE5E7EB" BorderThickness="1" Padding="8" Margin="0,8,0,0">
                            <TextBlock Foreground="#FF6B7280" FontSize="12" Text="(demo)" />
                        </Expander>
                        <Expander Header="Liên kết" IsExpanded="False" Background="White" BorderBrush="#FFE5E7EB" BorderThickness="1" Padding="8" Margin="0,8,0,0">
                            <TextBlock Foreground="#FF6B7280" FontSize="12" Text="(demo)" />
                        </Expander>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>

